<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_orange_background" />
            <corners android:radius="@dimen/_100sdp"/>
            <stroke android:color="@color/color_white_text"
                android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_50sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_red_orange_background" />
            <corners android:radius="@dimen/_100sdp"/>
            <stroke android:color="@color/color_white_text"
                android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_50sdp" />
        </shape>
    </item>
</selector>
