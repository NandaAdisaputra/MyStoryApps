<?xml version="1.0" encoding="utf-8"?>
<!--TODO  buat resource dengan nama background_switch_dark_mode.xml di dalam package drawable-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--TODO Ketika Switch ada aksi klik -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_red_orange_text" />
            <!--membuat lengkungan pada background-->
            <corners android:radius="@dimen/_100sdp" />
            <!--membuat border pada background-->
            <stroke android:width="@dimen/_1sdp"
                android:color="@android:color/white" />
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
    <!--TODO Ketika Switch tidak ada aksi klik-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_orange_text" />
            <corners android:radius="@dimen/_100sdp" />
            <stroke android:width="@dimen/_1sdp"
                android:color="@android:color/black" />
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
</selector>
